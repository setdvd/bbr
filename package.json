{
  "name": "bbr",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "yarn start:web & yarn start:app",
    "start:app": "wait-on tcp:3000 && electron .",
    "start:web": "react-scripts start",
    "build": "PUBLIC_URL=./ react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder --mac"
  },
  "main": "main.js",
  "dependencies": {
    "@revolut/icons": "^1.38.1",
    "@revolut/ui-kit": "^11.17.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "axios": "^0.21.4",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "rifm": "^0.12.0",
    "styled-components": "^5.3.1",
    "typescript": "^4.1.2",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {
          "project": "."
        }
      }
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": ["error"],

      "react-hooks/exhaustive-deps": [
        "error"
      ],
      "import/no-internal-modules": [
        "error",
        {
          "allow": [
            "src/domains/*",
            "src/domains/*/features/*",
            "src/domains/*/components",
            "src/domains/*/api",
            "src/toolkit/*",
            "src/uikit/*"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extends": null,
    "appId": "com.github.setdvd.bbr",
    "productName": "BBR",
    "afterSign": "electron-builder-notarize",
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "./entitlements.mac.plist"
    },
    "dmg": {
      "icon": false,
      "artifactName": "BBR.dmg"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "vPrefixedTagName": false
      }
    ]
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.14",
    "electron-builder": "^22.11.7",
    "electron-builder-notarize": "^1.2.0",
    "electron": "^14.0.0",
    "prettier": "2.3.2"
  }
}
